<Window x:Class="hTunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="hTunes" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="117,35,0,61" Grid.RowSpan="2">
            <!-- DataGrid Column Headers-->
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Visibility="Hidden"/>
                <DataGridTextColumn Binding="{Binding title}" Header="Title"/>
                <DataGridTextColumn Binding="{Binding artist}" Header="Artist"/>
                <DataGridTextColumn Binding="{Binding album}" Header="Album"/>
                <DataGridTextColumn Binding="{Binding genre}" Header="Genre"/>
            </DataGrid.Columns>

            <!-- Details Panel-->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Background="AliceBlue">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding title}" />
                            <Image Source="{Binding albumImage}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- Top Toolbar -->
        <ToolBar HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="517">
            <Button Content="Open" Height="31" VerticalAlignment="Top" Width="75"/>
            <Button Content="New Playlist" Height="31" VerticalAlignment="Top" Width="75"/>
            <Button Content="About" Height="31" VerticalAlignment="Top" Width="75"/>

        </ToolBar>
        <Button Content="Play" HorizontalAlignment="Left" Margin="95,186,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.178,0.575" Grid.Row="1"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="186,186,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.178,0.575" Grid.Row="1"/>
        <Button Content="Show" HorizontalAlignment="Left" Margin="376,186,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.178,0.575" Grid.Row="1"/>
        <ListBox HorizontalAlignment="Left" Height="223" Margin="10,35,0,0" VerticalAlignment="Top" Width="100" Grid.RowSpan="2"/>


    </Grid>
</Window>
